<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/gradient_list_of_order"
    android:layout_gravity="center">

    <TextView

        android:layout_weight="50"
        android:id="@+id/dish_name"
        style="@style/TextStyle"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/dish_quantity"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="15dp"
        android:paddingRight="8dp"
        android:textSize="20sp"
        tools:text="Name of dish " />

    <TextView

        android:id="@+id/dish_quantity"
        style="@style/TextStyle"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/od"
        android:layout_weight="1"
        android:paddingLeft="6dp"
        android:textSize="20sp"
        tools:text="N" />

   <TextView
       android:layout_weight="0"
       android:id="@+id/od"
       style="@style/TextStyle"
       android:layout_width="40dp"
       android:layout_toLeftOf="@id/dish_price"
       android:textSize="20sp"
       android:text="шт."
       android:layout_marginTop="15dp" />

    <TextView

        android:layout_weight="1"
        android:id="@+id/dish_price"
        style="@style/TextStyle"
        android:layout_width="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="2dp"
        android:textSize="20sp"
        tools:text="Cost" />


</RelativeLayout>